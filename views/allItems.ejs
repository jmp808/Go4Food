<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Go4Food Restaurant Catalog</title>
    <link rel="stylesheet" href="css/styles.css" />
  </head>
  <style>
    .contentHeader {
      display: flex;
      margin: 20px;
    }
    .item-list {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      margin-left: 5%;
    }
    .card_item {
      width: calc(33% - 20px);
      margin-bottom: 20px;
      padding: 20px;
      background-color: #fff;
      border: 1px solid #e0e0e0;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
      border-radius: 5px;
      text-align: center;
    }

    .card_item img {
      width: 100%;
      max-height: 150px;
      object-fit: cover;
      border-radius: 5px;
    }

    .card_item h3 {
      margin: 10px 0;
      font-size: 18px;
      color: #ef3d3d;
      text-align: left;
    }

    .card_item p {
      margin: 5px 0;
      font-size: 14px;
      color: #777;
      text-align: left;
    }
  </style>
  <body>
    <div class="container" style="max-width: 100%">
      <%- include('navbar') %>
    </div>
    <div class="content" style="max-height: 100%; margin-top: 0px">
      <%- include('sidebar') %>
      <div class="restaurant-catalog">
        <div class="name" style="display: flex; justify-content: space-between">
          <h1 style="color: #ef3d3d">Restaurant name</h1>
         
        </div>
        <h2 style="margin-left: 5%; color: #ef3d3d">Top Rated item</h2>
        <br />
        <div class="item-list">
 
          <% if(per_menus.length==0){ %>
          <h1>No items found</h1>
          <% }else { %>
          <% for(var i=0;i<per_menus.length;i++){ %>
          <div class="card_item">
            <h3><%=per_menus[i].restaurant.name %>'s</h3>
            <img
              src="/images/<%=per_menus[i].images[0] %>"
              alt="Restaurant 1"
            />

            <p>
              <strong><%=per_menus[i].title %></strong>
              <%=per_menus[i].description %>
            </p>
            <div class="button-container">
              <form action="/cart" method="post">
              <input type="hidden" name="menu_id" value="<%=per_menus[i]._id %>">
              <button class="prev-button" type="submit">Add To Card</button>
            </form>
            <form action="/buynow" method="post">
              <input type="hidden" name="menu_id" value="<%=per_menus[i]._id %>">
              <button class="next-button">Buy Now</button>
            </form>
            </div>
          </div>
          <% } %>
          <% } %>
      
          <!-- Add more top-rated restaurant items here -->
        </div>
        <div class="button-container">
          <button class="prev-button">Previous</button>
          <button class="next-button">Next</button>
        </div>
        <h2 style="margin-left: 5%; color: #ef3d3d">item</h2>
        <br />
        <div class="item-list">
        <% if(allMenus.length==0){ %>
          <h1>No items found</h1>
          <% }else { %>
          <% for(var i=0;i<allMenus.length;i++){ %>

          <div class="card_item">
            <h3><%=allMenus[i].restaurant.name %>'s</h3>
            <img
              src="/images/<%=allMenus[i].images[0] %>"
              alt="Restaurant 1"
            />

            <p>
              <strong><%=allMenus[i].title %></strong>
              <%=allMenus[i].description %>
            </p>
            <div class="button-container">
              <form action="/cart" method="post">
                <input type="hidden" name="menu_id" value="<%=allMenus[i]._id %>">
                <button class="prev-button" type="submit">Add To Card</button>
              </form>
              <form action="/buynow" method="post">
                <input type="hidden" name="type" value="single">
                <input type="hidden" name="menu_id" value="<%=allMenus[i]._id %>">
                <button class="next-button">Buy Now</button>
              </form>
            </div>
          </div>
          <% } %>
          <% } %>
        
          <!-- Add more top-rated restaurant items here -->
        </div>
      </div>
    </div>
  </body>
</html>
