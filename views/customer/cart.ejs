<!DOCTYPE html>
<html>
  <head>
    <title>Go4Food - Cart</title>
    <link rel="stylesheet" href="css/styles.css" />
     <style>
       .buttons  {
      padding: 10px 10px;
      font-size: 16px;
      cursor: pointer;
       border: none;
        border:  1px solid #ef3d3d;
      color: #ef3d3d;
       border-radius: 5px;
    }
     </style>
  </head>

  <body>
    <div class="container-fluid ">
          <!-- navbar -->
          <%- include('../navbar') %>
      <div class="content"  style="min-height: 100vh; margin-top: 0px !important"
      >
        <%- include('../sidebar') %>
        
        <div class="cart-content">
          <h1>Shopping Cart</h1>
            
          <% if((cart.menus.length)==0 ){%>
            <h2>Cart is empty</h2>
            <% }else{ %>
                <% var totalPrice =0; var qty=0 %>
                <% for(var i=0;i<cart.menus.length;i++){ %>

          <div class="cart-item">
            <img src="/images/<%=cart.menus[i].menu_id.images[0] %>" alt="Product Image" />
            <div class="cart-item-details">
              <h3>Product <%= cart.menus[i].menu_id.title %></h3>
              <p>Price: $<%=cart.menus[i].menu_id.price*cart.menus[i].quantity %></p>
              <p>Quantity: <%=cart.menus[i].quantity %></p>
            </div>
            <div class="cart-item-actions">
              <button class="remove-item">Remove</button>
            </div>
          </div>
            <% totalPrice += cart.menus[i].menu_id.price*cart.menus[i].quantity %>
            <% qty ++ %>
          <% }} %>
          <div class="cart-item">
             <div class="cart-item-details">
              <h3></h3>
              <p>Total Price: $<%=totalPrice %></p>
              <p>Total Quantity: <%=qty %></p>
              <button class="remove-item  buttons" style="margin-right: 10px; margin-top: 10px;">Buy Now</button>
              <button class="remove-item buttons">Pre Planned Order</button>

            </div>
             
            </div>
        </div>
      </div>
    </div>
  </body>
</html>
