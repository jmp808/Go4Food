<!DOCTYPE html>
<html>
  <head>
    <title>Go4Food Restaurant Catalog</title>
        <link rel="stylesheet" href="../css/styles.css" />
  </head>
  <body>
    <div class="container-fluid">
      <!-- navbar -->
      <%- include('header') %>
      <!-- Side bar -->
      <div class="content" style="min-height: 100vh; margin-top: 0px">
        <%- include('sidebar') %>
        <div class="restaurant-catalog">
            <h1>Restaurant Catalog</h1>
            <h2>Welcome <%= restaurant.name %></h2>

            <div>
              <canvas id="myChart"></canvas>
            </div>
        </div>
    </div>
      <!--  main  -->
    </div>
    </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
      const ctx = document.getElementById('myChart');
      const labels = '<%=menus_name %>'
      const order = '<%=menus_orders %>'
 
    
      new Chart(ctx, {
        type: 'bar',
        data: {
          labels:  labels.split(","),
          datasets: [{
            label: '# of Orders',
            data:  order.split(","),
            borderWidth: 1
          }]
        },
        options: {
          scales: {
            y: {
              beginAtZero: true
            }
          }
        }
      });
    </script>
     
  </body>
</html>
